<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>fat-tests</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>org.openjdk.jcstress:jcstress-core</include>
                <include>net.java.dev.jna:jna</include>
                <include>net.java.dev.jna:jna-platform</include>
                <include>net.sf.jopt-simple:jopt-simple</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <unpack>true</unpack>
            <scope>test</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/test-classes</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*/**/jcstress/**/*.class</include>
                <include>META-INF/TestList</include>
                <include>META-INF/org/**/*</include>
                <include>META-INF/services/**/*</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
            <excludes>
                <exclude>META-INF/BenchmarkList</exclude>
                <exclude>META-INF/CompilerHints</exclude>
            </excludes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
    </fileSets>
</assembly>
